<div class="container">
	<div class="row-fluid">
		<% if @post %>
		<%= console %>
		<%= form_for @post, url: posts_path, method: 'create' do |f| %>

		<div class="row-fluid">
			<img id="upload-preview" src="" style="max-width:100%;">
			<div class="row-fluid">
				<!-- <%= f.label :title, class:"col-xs-2 col-xs-offset-3" %> -->
				<%= f.label :title, class:"col-xs-12 col-xs-offset-0" %>
			</div>
			<div class="row-fluid">
				<!-- <%= f.text_field :title, :id => 'create_post_input', class: "col-xs-6 col-xs-offset-3" %> -->
				<%= f.text_field :title, :id => 'create_post_title', class: "col-xs-8 col-xs-offset-0" %>
			</div>
<!-- 			<div class="row-fluid">
				<%= f.hidden_field :url, :id=>'create_post_url' %>
			</div>
		-->		
	</div>

	<div class="row-fluid">
		<%= f.label :content, class:"col-xs-12 col-xs-offset-0" %>
	</div>
	<div class="row-fluid">
		<%= f.text_area :content, :id => 'create_post_content',class: "col-xs-8 col-xs-offset-0" %>
	</div>
	</div>
	<%= f.hidden_field :url, :id => 'create_post_url' %>
	<%= f.hidden_field :latitude, :id=>'create_post_latitude' %>
	<%= f.hidden_field :longitude, :id=>'create_post_longitude' %>
	<%= f.hidden_field :user_id, :id=>'create_post_user_id',value: current_user.id %>

<div class="row-fluid col-xs-8" style="margin-top:30px;">
	<div class="col-xs-4">
		<script type="text/javascript" src="//api.filestackapi.com/filestack.js"></script>

		<input type="filepicker" name="url" data-fp-apikey="Ava0A61KoQBesvnGWUnYTz" onchange="$('#create_post_url').attr('value',event.fpfile.url);$('#upload-preview').attr('src',event.fpfile.url)">
	</div>
	<div class="col-xs-4">
		<%= f.submit "submit", :id => 'create_post_submit', :class => 'btn btn-default'%>

	</div>
	<div class="col-xs-4">
		<%= f.submit "cancel", :id => 'create_post_cancel', :class => 'btn btn-default' %>
	</div>
</div>
</div>
<script type="text/javascript">
	var geo = $.post( "https://www.googleapis.com/geolocation/v1/geolocate?key=AIzaSyAMIc7OAUicwD3-NJJ0wFmcxLlXD8B_Y5U", function( geo ) {var long = geo.location.lng;var lat = geo.location.lat;
		$('#create_post_latitude').attr('value',lat);
		$('#create_post_longitude').attr('value',long);
	})
</script>
<% end %>
<% end %>

