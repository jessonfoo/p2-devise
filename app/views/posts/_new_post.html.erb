<div class="container">
	<div class="row-fluid">
		<% #if @post %>
		<% # console %>
		<%= form_for @post do |f| %>

		<div class="row-fluid field">
			<div class="col-xs-8">
				<%= f.label :title, class:"col-xs-12" %>
				<%= f.text_field :title, :id => 'create_post_title', class: "col-xs-12" %>
				<%= f.label :content, class:"col-xs-12 col-xs-offset-0" %>
				<%= f.text_area :content, :id => 'create_post_content',class: "col-xs-12" %>

	<%= f.hidden_field :url, :id => 'create_post_url' %>
	<%= f.hidden_field :latitude, :id=>'create_post_latitude' %>
	<%= f.hidden_field :longitude, :id=>'create_post_longitude' %>
	<%= f.hidden_field :user_id, :id=>'create_post_user_id',value: current_user.id %>
<div class="row-fluid col-xs-12" style="margin-top:30px;">
		<input type="filepicker" name="url" data-fp-apikey="APC2DELQlOog2RmuF3Ozgz" onchange="$('#create_post_url').attr('value',event.fpfile.url);$('#upload-preview').attr('src',event.fpfile.url)" style="float:right !important;">
		<%= f.submit "submit", :id => 'create_post_submit', :class => 'btn btn-default'%>

	</div>
			</div>

		<div class="col-xs-4">
			<img id="upload-preview" src="" style="max-width:100%;">
		</div>

		<% # f.submit "cancel", :id => 'create_post_cancel', :class => 'btn btn-default' %>
</div>
<% end %>
<% # end %>

<script type="text/javascript">
$(document).ready(function(){
	 $.post( "https://www.googleapis.com/geolocation/v1/geolocate?key=AIzaSyAMIc7OAUicwD3-NJJ0wFmcxLlXD8B_Y5U", function( geo ) {var long = geo.location.lng;var lat = geo.location.lat;
		$('#create_post_latitude').attr('value',lat);
		$('#create_post_longitude').attr('value',long);
	});
});
</script>
