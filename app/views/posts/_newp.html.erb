
<div class="modal fade" id="new-post" tabindex="-1" role="dialog" aria-labelledby="new-post" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
          <% if @post %>
    <%= form_for @post do |f| %>
    <div class="row-fluid">
      <div class="row-fluid">
        <img id="upload-preview" src="" style="max-width:100%;">
      </div>
      <div class="row-fluid">
        <%= f.label :title, class:"col-xs-12 col-xs-offset-0" %>
      </div>
      <div class="row-fluid">
        <%= f.text_field :title, :id => 'create_post_input', class: "col-xs-8 col-xs-offset-0" %>
      </div>
      <div class="row-fluid">
        <%= f.hidden_field :url, :id=>'create_picture_url' %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="row-fluid">
        <%= f.label :content, class:"col-xs-12 col-xs-offset-0" %>
      </div>
      <div class="row-fluid">
        <%= f.text_area :content, :id => 'create_post_input',class: "col-xs-8 col-xs-offset-0" %>
      </div>
      <br>
    </div>
  </div>
  <div class="row-fluid">
    <%= f.hidden_field :latitude, :id=>'create_post_latitude' %>
    <%= f.hidden_field :longitude, :id=>'create_post_longitude' %>
    <%= f.hidden_field :user_id, :id=>'create_post_longitude' %>
  </div>
      </div>
      <div class="modal-footer">
          <script type="text/javascript" src="//api.filestackapi.com/filestack.js"></script>
<!--     <div class="col-md-4">
      <%= f.submit "Submit Post", :id => 'create_post_submit', :class => 'btn btn-style'%>

    </div>
    <div class="col-md-4">
      <%= f.submit "cancel", :id => 'create_post_cancel', :class => 'btn btn-style' %>
    </div>
-->        
      <%= f.submit "cancel", :id => 'create_post_cancel', :class => 'btn btn-default' %>
      <%= f.submit "Submit Post", :id => 'create_post_submit', :class => 'btn btn-primary'%>

  <% end %>
  <% end %>
<!-- <input type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary">Save changes</button>
 -->      
 <!-- </div> -->
    </div>
  </div>
</div>
<script type="text/javascript">
  var geo = $.post( "https://www.googleapis.com/geolocation/v1/geolocate?key=AIzaSyAMIc7OAUicwD3-NJJ0wFmcxLlXD8B_Y5U", function( geo ) {var long = geo.location.lng;var lat = geo.location.lat;
    $('#create_post_latitude').attr('value',lat);
    $('#create_post_longitude').attr('value',long);
  })
</script>
